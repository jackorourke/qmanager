<br><br><br><br><br>

<div class="container">

<h1>Your Upcoming Patients</h1>

<table class="table table-striped table-hover">
	<tr>
		<th>Seen?</th>
		<th>Queue Number</th>
		<th>Name</th>
		<th>Patient Age</th>
		<th>Symptoms</th>
	</tr>

	<% @visits.each do |visit| %>
	<% if @visits.index(visit) == 0 %>
	<tr class="danger">
			<td><%= link_to 'Seen', visit_path(visit), method: :delete, data: {confirm: 'Are you sure this patient has been treated? This will remove the patient from the queue'} %></td>
	<% elsif @visits.index(visit) == 1 %>
	<tr class="warning">
		<td></td>
	<% else %>
	<tr>
			<td></td>
		<% end %>
		<td><%= @visits.index(visit) + 1 %></td>
		<td><%= visit.name %></td>
		<td><%= visit.age %></td>
		<td><%= visit.symptoms %></td>
	</tr>
	<% end %>
</table>

</div>

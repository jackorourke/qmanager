<h1>Your Upcoming Visits</h1>

<table>
	<tr>
		<th>Seen?</th>
		<th>Queue Number</th>
		<th>Name</th>
		<th>Patient Age</th>
		<th>Symptoms</th>
		<th colspan="4"></th>
	</tr>

	<% @visits.each do |visit| %>
	<tr>
		<td><%= link_to 'Seen', visit_path(visit), method: :delete, data: {confirm: 'Are you sure this patient has been treated? This will remove the patient from the queue'} %></td>
		<td>1 #visit.queue_number</td>
		<td><%= visit.name %></td>
		<td><%= visit.age %></td>
		<td><%= visit.symptoms %></td>
	</tr>
	<% end %>
</table>

	<div class= "col-lg-12 text-center">
		<h2> Search for your Appointment </h2>
		<hr class="star-light"></hr>
	</div>	
	<div class="container">
		<div class="row">
			<div class="col-md-offset-4">
				<%= form_tag(search_visits_path, :method => "get", id: "search-form") do %>
				  <%= text_field_tag :search, params[:search], placeholder: "Search Appointments" %>
				  <%= submit_tag  "Search"%>
				<% end %>

				<% if @searched %>
					<% @visits.each do |visit| %>
						<p><%= link_to visit.name, visit_path(visit) %></p>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>

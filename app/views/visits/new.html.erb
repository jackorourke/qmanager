<br><br><br><br><br>


<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2>Make an Appointment</h2>
            <hr class="star-primary">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            
            <%= form_for @visit do |f| %>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label for="visit_user_id">Select Your Doctor</label>
                        <br>
                        <%= f.collection_select(:user_id, User.all, :id, :name) %>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Enter Contact Number</label>
                        <%= f.text_field :contact_number, autofocus: true, class: "form-control", placeholder: "Contact Number" %>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Name</label>
                        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Age</label>
                        <%= f.number_field :age, class: "form-control", placeholder: "Age"%>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Symptoms</label>
                        <%= f.text_area :symptoms, class: "form-control", placeholder: "Symptoms"%>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Travel Time</label>
                       <%= f.number_field :travel_time, class: "form-control", placeholder: "Travel Time"%>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>

                <br>
                <div id="success"></div>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <button type="submit" class="btn btn-success btn-lg">Submit</button>
                    </div>
                </div>
            
        </div>
    <% end %> </div>
</div>
